<!-- title linked to the external resource -->
<h1><a href="<%= resource.url %>"><%= resource.title %></a></h1>

<!-- image -->
<img
  class="thumbnail"
  src="<%= resource.thumbnail_url %>"
  alt="resource thumbnail"
/>
<div class="text">
  <p>Topic: <%= category_name[0].name %></p>
  <p>Average rating: <%= resource.average_rating %></p>
  <p>Description: <%= resource.description %></p>
</div>
