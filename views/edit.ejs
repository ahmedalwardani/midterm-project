<!DOCTYPE html>
<html lang="en">

<head>
  <title>dogEared</title>
  <!-- Normalization -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- Font import -->
  <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;500&display=swap" rel="stylesheet">

  <!-- font awesome icons -->
  <script src="https://kit.fontawesome.com/948f369b19.js" crossorigin="anonymous"></script>

  <!-- Styles -->

</head>

<body>
  <%- include('partials/header') %>

  <!-- style notes: new page and add button centered, other two fields stack on top in columns, toggle add new topic  -->
  <main style="margin: 1em;">
    <h3>New Page</h3>

    <form class="form-inline" action="" method="POST">
      <div class="input-label-pair">
        <label for="title">Title:</label>
        <input class="form-control" type="text" name="title">
      </div>
      <div class="input-label-pair">
        <label for="url">Page URL:</label>
        <input class="form-control" type="text" name="url" placeholder="http://">
      </div>
      <div class="input-label-pair">
        <label for="thumbnail_url">Thumbnail URL:</label>
        <input class="form-control" type="text" name="thumbnail_url">
      </div>
      <div class="input-label-pair topic">

        <!-- DROP DOWN MENU TOPIC NAME -->
        <%- include('partials/topic_dropdown') %>

        <!-- Toggle form to add a new topic name -->
        <i class="fas fa-plus-circle"></i>
        <form class="form-inline" action="/new-topic" method="POST">
          <label for="topic_name">New Topic:</label>
          <input class="form-control" type="text" name="topic_name">
          <button type="submit" class="btn">Add</button>
        </form>
      </div>

      <!-- button to submit new resource -->
      <button type="submit" class="btn">Add Resource</button>
    </form>
  </main>

  <!-- Bootstracp JS or scripts goes here -->
</body>

</html>
